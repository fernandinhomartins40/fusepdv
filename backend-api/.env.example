# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL="postgresql://user:password@localhost:5432/pdv_database?schema=public"

# ==============================================
# JWT SECRETS (CHANGE IN PRODUCTION!)
# ==============================================
JWT_ACCESS_SECRET="your-super-secret-access-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"

# ==============================================
# JWT EXPIRATION
# ==============================================
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=3333
HOST="0.0.0.0"
NODE_ENV="development"

# ==============================================
# CORS CONFIGURATION
# ==============================================
# Comma-separated list of allowed origins
CORS_ORIGIN="http://localhost:3000,http://localhost:5173"

# ==============================================
# LOGGING
# ==============================================
# Options: debug, info, warn, error
LOG_LEVEL="info"

# ==============================================
# RATE LIMITING
# ==============================================
# Maximum requests per minute per IP (general endpoints)
RATE_LIMIT_MAX=100
# Maximum requests per minute for auth endpoints
RATE_LIMIT_AUTH_MAX=10

# ==============================================
# FILE UPLOAD
# ==============================================
# Maximum file size for NF-e XML uploads (in bytes)
# Default: 10MB = 10485760 bytes
MAX_FILE_SIZE=10485760

# ==============================================
# WEBSOCKET
# ==============================================
# WebSocket uses the same CORS_ORIGIN configuration above
